{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
      "paths": {
        "@ccn/*": ["./"],
        "@components/*": ["./components/*"],
        "@modules/*": ["./styles/modules/*"],
        "@providers/*": ["./providers/*"],
        "@utils/*":["./utils/*"],
        "@mediator/*": ["./mediator/*"],
        "@constants/*": ["./constants/*"],
        "@database/*":["./database/*"],
        "@types/*": ["./types/*"]
      },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.jsx", "**/*.js"],
  "exclude": ["node_modules", "./yarn-error.log", "./yarn.lock", ".next"]

}
